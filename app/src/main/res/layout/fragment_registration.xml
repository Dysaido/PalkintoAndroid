<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    tools:context=".uservalidation.ui.RegistrationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="@string/reg_label"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/login_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/reg_errFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingTop="20sp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_first_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_errLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_last_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

        </LinearLayout>

