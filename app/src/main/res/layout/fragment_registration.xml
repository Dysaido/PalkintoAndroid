        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_errEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_errEmailValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_emailValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_email_conf"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_errPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_pws"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textAlignment="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_errPasswordValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry,SmallSp" />

            <EditText
                android:id="@+id/reg_passwordValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_pws_conf"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textAlignment="textStart" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:visibility="visible">

        <Button
            android:id="@+id/reg_button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/global_back"
            tools:ignore="ButtonStyle,NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            tools:ignore="UselessLeaf" />

        <Button
            android:id="@+id/reg_button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/global_continue"
            tools:ignore="ButtonStyle,NestedWeights" />

    </LinearLayout>
</LinearLayout>